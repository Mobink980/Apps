
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1" >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="51.0dp"
        android:id="@+id/textnum"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:textSize="20dp" />
    <RelativeLayout
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="363.5dp"
        android:layout_height="403.0dp"
        android:id="@+id/relativeLayout1"
        android:layout_marginLeft="15px">

        <Button
            android:text="1"
            android:layout_width="90dp"
            android:layout_height="64.5dp"
            android:id="@+id/btn1"
            android:layout_marginLeft="0.0dp" />
        <Button
            android:text="2"
            android:layout_width="90dp"
            android:layout_height="64.5dp"
            android:layout_toRightOf="@+id/btn1"
            android:id="@+id/btn2" />
        <Button
            android:text="3"
            android:layout_width="90dp"
            android:layout_height="64.5dp"
            android:layout_toRightOf="@+id/btn2"
            android:id="@+id/btn3" />
        <Button
            android:text="+"
            android:layout_width="90dp"
            android:layout_height="64.5dp"
            android:layout_toRightOf="@+id/btn3"
            android:id="@+id/btnplus" />


        <Button
            android:text="4"
            android:layout_width="90dp"
            android:layout_height="64.5dp"
            android:id="@+id/btn4"
            android:layout_below ="@+id/btn1"
            android:layout_marginLeft="0.0dp" />
        <Button
            android:text="5"
            android:layout_width="90dp"
            android:layout_height="64.5dp"
            android:layout_toRightOf="@+id/btn1"
            android:layout_below ="@+id/btn2"
            android:id="@+id/btn5" />
        <Button
            android:text="6"
            android:layout_width="90dp"
            android:layout_height="64.5dp"
            android:layout_toRightOf="@+id/btn2"
            android:layout_below ="@+id/btn3"
            android:id="@+id/btn6" />
        <Button
            android:text="-"
            android:layout_width="90dp"
            android:layout_height="64.5dp"
            android:layout_toRightOf="@+id/btn3"
            android:layout_below ="@+id/btnplus"
            android:id="@+id/btnminus" />


        <Button
            android:text="7"
            android:layout_width="90dp"
            android:layout_height="64.5dp"
            android:id="@+id/btn7"
            android:layout_below ="@+id/btn4"
            android:layout_marginLeft="0.0dp" />
        <Button
            android:text="8"
            android:layout_width="90dp"
            android:layout_height="64.5dp"
            android:layout_toRightOf="@+id/btn1"
            android:layout_below ="@+id/btn5"
            android:id="@+id/btn8" />
        <Button
            android:text="9"
            android:layout_width="90dp"
            android:layout_height="64.5dp"
            android:layout_toRightOf="@+id/btn2"
            android:layout_below ="@+id/btn6"
            android:id="@+id/btn9" />
        <Button
            android:text="x"
            android:layout_width="90dp"
            android:layout_height="64.5dp"
            android:layout_toRightOf="@+id/btn3"
            android:layout_below ="@+id/btnminus"
            android:id="@+id/btnmult" />



        <Button
            android:text="."
            android:layout_width="90dp"
            android:layout_height="64.5dp"
            android:id="@+id/btnpoint"
            android:layout_below ="@+id/btn7"
            android:layout_marginLeft="0.0dp" />
        <Button
            android:text="0"
            android:layout_width="90dp"
            android:layout_height="64.5dp"
            android:layout_toRightOf="@+id/btn1"
            android:layout_below ="@+id/btn8"
            android:id="@+id/btn0" />
        <Button
            android:text="="
            android:layout_width="90dp"
            android:layout_height="64.5dp"
            android:layout_toRightOf="@+id/btn2"
            android:layout_below ="@+id/btn9"
            android:id="@+id/btnequal" />
        <Button
            android:text="รท"
            android:layout_width="90dp"
            android:layout_height="64.5dp"
            android:layout_toRightOf="@+id/btn3"
            android:layout_below ="@+id/btnmult"
            android:id="@+id/btndivide" />

        <Button
            android:text="CLEAR"
            android:layout_width="359.5dp"
            android:layout_height="64.5dp"
            android:layout_below ="@+id/btndivide"
            android:background = "#ee4533"
            android:textColor = "#dddddd"
            android:textSize ="37px"
            android:id="@+id/btnclear" />

    </RelativeLayout>
</LinearLayout>